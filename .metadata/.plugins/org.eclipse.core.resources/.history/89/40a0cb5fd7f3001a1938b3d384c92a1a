package day.twelve;

public class FullTimeEmployee extends Employee{
	private double basic;
	private double bonus;
	
	public FullTimeEmployee(int id, String firstName, String lastName, String address, String mobile, double basic,
			double bonus) {
		super(id, firstName, lastName, address, mobile);
		this.basic = basic;
		this.bonus = bonus;
	}
	
	public double computeSal(){
		return basic + bonus;
	}
	
	public void showDetails() {
		System.out.println("Id : "+id);
		System.out.println("Full Name : "+getFullName()); 
		System.out.println("Gross Salary : "+computeSal()); 
		System.out.println("Address : "+ address);
		System.out.println("Mobile : "+mobile); 
	}
	
	public void sendMessage() {
	 	System.out.println("Salary Added to " + getFullName() +  "'s Account...");
	}
}
